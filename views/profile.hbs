<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
        {{!-- https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Ryan_Dahl.jpg/600px-Ryan_Dahl.jpg --}}
        <img src="{{user.avatarUrl}}" alt="avatar-{{user.name}}" class="avatar">
        {{else}}
        <p>No avatar</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="POST" enctype="multipart/form-data">
            <p>Your email: {{user.email}}</p>
            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" value="{{user.name}}" required>
                <label for="name">Name</label>
                <span class="helper-text" data-error="wrong name" ></span>
            </div>
            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn" type="submit">Change</button>
        </form>
    </div>
</div>