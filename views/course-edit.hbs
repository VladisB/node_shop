<div class="row">
<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="wrong name" ></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="text" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="wrong price" ></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL img</label>
        <span class="helper-text" data-error="wrong url" ></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">
<input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn btn-primary">Edit</button>
    
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button type="submit" class="btn red">Delete</button>
</form>
</div>
